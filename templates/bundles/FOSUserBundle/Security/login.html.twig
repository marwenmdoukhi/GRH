{% extends "layout_user.html.twig" %}

{% block fos_user_content %}

<div class="signin-panel">
    <img src="{{asset('img/grh.jpg')}}" class="img-fluid" alt="Responsive image">

    <div class="signin-sidebar">
        <div class="signin-sidebar-body">
            <a href="#" class="sidebar-logo mg-b-40"><span>GRH</span></a>
            <h4 class="signin-title">Connectez vous</h4>
            <h5 class="signin-subtitle">à votre communauté de confrère</h5>

            {% if error %}
                <div  class="alert alert-danger" role="alert">
                    {{ error|trans({}, 'FOSUserBundle') }}
                </div>
            {% endif %}

            <div class="signin-form">
                <form class="form-login" action="{{ path("fos_user_security_check") }}" method="post" style="max-width: 330px;">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label>Adresse email </label>
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                    </div>

                    <div class="form-group">
                        <label class="d-flex justify-content-between">
                            <span>Mot de passe</span>
                        </label>
                        <input type="password" class="form-control" id="password" name="_password" required="required" />
                    </div>
                    <div class="form-group">
                        <input  type="checkbox" id="remember_me" name="_remember_me" value="on" style="margin-left: 0px;"/>
                        <label for="remember_me">Mémoriser</label>
                        <p><a href="{{ path('fos_user_resetting_check_email') }}" class="tx-13">Mot de passe oublié?</a></p>
                    </div>
                    <div class="form-group d-flex mg-b-0">
                        <input type="Submit" id="_submit" name="_submit" value="Se connecter" class="btn btn-brand-01 btn-uppercase flex-fill"/>

                    </div>

                    <div class="divider-text mg-y-30">Ou</div>

                    <a href="{{path('fos_user_registration_register')}}" class="btn btn-white btn-uppercase flex-fill mg-l-10">S'inscrire</a>
                </form>
            </div>

        </div><!-- signin-sidebar-body -->
    </div><!-- signin-sidebar -->
</div><!-- signin-panel -->
{% endblock fos_user_content %}